<UserControl 
	x:Class="Lyt.Avalonia.PaletteDesigner.Workflow.Shading.PalettePreviewView"
	xmlns:vm="clr-namespace:Lyt.Avalonia.PaletteDesigner.Workflow.Shading"
	x:DataType="vm:PalettePreviewViewModel" 

	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:sys="clr-namespace:System;assembly=System.Runtime"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"	
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="860" d:DesignHeight="850"
	Background="Transparent"
	>
	<UserControl.Resources>
		<sys:Double x:Key="SpacingWidth">16</sys:Double>
		<sys:Double x:Key="SmallWidth">56</sys:Double>
		<sys:Double x:Key="LargeWidth">88</sys:Double>
	</UserControl.Resources>

	<UserControl.Styles>
		<Style Selector="Rectangle">
			<Setter Property="RadiusX" Value="6"/>
			<Setter Property="RadiusY" Value="6"/>
		</Style>
	</UserControl.Styles>
	<Grid
		Margin="4"
		Width="840" Height="720"
		>
		<Grid.RowDefinitions>
			<RowDefinition Height="60" />
			<RowDefinition Height="20" />
			<RowDefinition Height="600" />
			<RowDefinition Height="40" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="120" />
			<ColumnDefinition Width="600" />
			<ColumnDefinition Width="120" />
		</Grid.ColumnDefinitions>

		<Grid
			Grid.Column="1" Grid.Row="0"
			>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="6" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="6" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="6" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<vm:PaletteColorView
				Grid.Column="2"
				DataContext="{Binding MiddleLeftShades}"
				HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"
				/>
			<vm:PaletteColorView
				Grid.Column="4"
				DataContext="{Binding MiddleRightShades}"
				HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"
				/>
			<vm:PaletteColorView
				Grid.Column="6"
				DataContext="{Binding RightShades}"
				HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"
				/>
			<!-- Primary needs to be on top of all others-->
			<vm:PaletteColorView
				x:Name="PrimaryShades"
				Grid.Column="0"
				DataContext="{Binding LeftShades}"
				HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"
				/>
		</Grid>

		<Grid
			Width="600" Height="600"
			Grid.Column="1" Grid.Row="2"
			>
			<Grid.RowDefinitions>
				<RowDefinition Height="1.6*" />
				<RowDefinition Height="8" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1.6*" />
				<ColumnDefinition Width="8" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>


			<Grid
				x:Name="Primary"
				Grid.Row="0" Grid.Column="0"
				>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="16" />
					<ColumnDefinition Width="88" />
					<ColumnDefinition Width="16" />
					<ColumnDefinition Width="88" />
					<ColumnDefinition Width="16" />
					<ColumnDefinition Width="88" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="16" />
					<RowDefinition Height="88" />
					<RowDefinition Height="16" />
					<RowDefinition Height="88" />
					<RowDefinition Height="16" />
					<RowDefinition Height="88" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
				<Rectangle
					Fill="{Binding PrimaryBaseBrush}"
					Grid.ColumnSpan="999" Grid.RowSpan="999"
				/>
				<Rectangle
					Grid.Column="3" Grid.Row="1"
					Fill="{Binding PrimaryLightBrush}"
				/>
				<Rectangle
					Grid.Column="5" Grid.Row="1"
					Fill="{Binding PrimaryLighterBrush}"
				/>
				<Rectangle
					Grid.Column="1" Grid.Row="3"
					Fill="{Binding PrimaryDarkBrush}"
				/>
				<Rectangle
					Grid.Column="1" Grid.Row="5"
					Fill="{Binding PrimaryDarkerBrush}"
				/>
			</Grid>

			<Grid
				x:Name="Complementary"
				Grid.Row="3" Grid.Column="3"
				>
				<Rectangle
					Fill="{Binding ComplementaryBaseBrush}"
					/>
				<Grid
					>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="16" />
						<ColumnDefinition Width="56" />
						<ColumnDefinition Width="16" />
						<ColumnDefinition Width="56" />
						<ColumnDefinition Width="16" />
						<ColumnDefinition Width="56" />
						<ColumnDefinition Width="16" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="16" />
						<RowDefinition Height="56" />
						<RowDefinition Height="16" />
						<RowDefinition Height="56" />
						<RowDefinition Height="16" />
						<RowDefinition Height="56" />
						<RowDefinition Height="16" />
					</Grid.RowDefinitions>
					<Rectangle
						Grid.Column="2" Grid.Row="6"
						Fill="{Binding ComplementaryLighterBrush}"
						/>
					<Rectangle
						Grid.Column="4" Grid.Row="6"
						Fill="{Binding ComplementaryLightBrush}"
						/>
					<Rectangle
						Grid.Column="6" Grid.Row="4"
						Fill="{Binding ComplementaryDarkBrush}"
						/>
					<Rectangle
						Grid.Column="6" Grid.Row="2"
						Fill="{Binding ComplementaryDarkerBrush}"
						/>
				</Grid>
			</Grid>

			<Grid
				x:Name="SecondaryTop"
				Grid.Row="0" Grid.Column="3"
				>
				<Rectangle
					Fill="{Binding SecondaryTopBaseBrush}"
					/>
				<Grid
					>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="56" />
						<ColumnDefinition Width="16" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="16" />
						<RowDefinition Height="56" />
						<RowDefinition Height="16" />
						<RowDefinition Height="56" />
						<RowDefinition Height="16" />
						<RowDefinition Height="56" />
						<RowDefinition Height="16" />
						<RowDefinition Height="56" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>
					<Rectangle
						Grid.Column="1" Grid.Row="1"
						Fill="{Binding SecondaryTopLighterBrush}"
						/>
					<Rectangle
						Grid.Column="1" Grid.Row="3"
						Fill="{Binding SecondaryTopLightBrush}"
						/>
					<Rectangle
						Grid.Column="1" Grid.Row="5"
						Fill="{Binding SecondaryTopDarkBrush}"
						/>
					<Rectangle
						Grid.Column="1" Grid.Row="7"
						Fill="{Binding SecondaryTopDarkerBrush}"
						/>
				</Grid>
			</Grid>

			<Grid
				x:Name="SecondaryBot"
				Grid.Row="3" Grid.Column="0"
				>
				<Rectangle
					Fill="{Binding SecondaryBotBaseBrush}"
					/>
				<Grid
					>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="16" />
						<ColumnDefinition Width="56" />
						<ColumnDefinition Width="16" />
						<ColumnDefinition Width="56" />
						<ColumnDefinition Width="16" />
						<ColumnDefinition Width="56" />
						<ColumnDefinition Width="16" />
						<ColumnDefinition Width="56" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="56" />
						<RowDefinition Height="16" />
					</Grid.RowDefinitions>
					<Rectangle
						Grid.Column="1" Grid.Row="1"
						Fill="{Binding SecondaryBotLighterBrush}"
						/>
					<Rectangle
						Grid.Column="3" Grid.Row="1"
						Fill="{Binding SecondaryBotLightBrush}"
						/>
					<Rectangle
						Grid.Column="5" Grid.Row="1"
						Fill="{Binding SecondaryBotDarkBrush}"
						/>
					<Rectangle
						Grid.Column="7" Grid.Row="1"
						Fill="{Binding SecondaryBotDarkerBrush}"
						/>
				</Grid>
			</Grid>

		</Grid>

		<Grid
			Grid.Column="0" Grid.Row="2" Grid.RowSpan="1"
			>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<vm:ShadesValuesView
				Grid.Row="0"
				DataContext="{Binding TopLeftShadesValues}"
				HorizontalAlignment="Stretch"  VerticalAlignment="Center" 
				/>
			<vm:ShadesValuesView
				Grid.Row="1"
				DataContext="{Binding BottomLeftShadesValues}"
				HorizontalAlignment="Stretch"  VerticalAlignment="Center" 
				/>
		</Grid>
		
		<Grid
			Grid.Column="3" Grid.Row="2" Grid.RowSpan="1"
			>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<vm:ShadesValuesView
				Grid.Row="0"
				DataContext="{Binding TopRightShadesValues}"
				HorizontalAlignment="Stretch"  VerticalAlignment="Center"
				/>
			<vm:ShadesValuesView
				Grid.Row="1"
				DataContext="{Binding BottomRightShadesValues}"
				HorizontalAlignment="Stretch"  VerticalAlignment="Center"
				/>
		</Grid>

		<Grid
			Grid.Row="3" Grid.ColumnSpan="999"
			>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="120" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="120" />
			</Grid.ColumnDefinitions>
			<TextBlock
				Grid.Row="0"
				Text="Wheel Hue"
				Theme="{StaticResource Medium}"
				HorizontalAlignment="Right" 
				/>
			<Slider
				Grid.Column="1"
				Margin="8 0 8 0"
				Minimum="0.0" Maximum="359.99"
				SmallChange="0.5" LargeChange="10.0"
				TickFrequency="30.0" TickPlacement="BottomRight"
				Value="{Binding WheelSliderValue}"
				HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
				/>
			<TextBlock
				Grid.Row="0" Grid.Column="2"
				Text="{Binding WheelValue}"
				Theme="{StaticResource Medium}"
				HorizontalAlignment="Left" 
				/>
		</Grid>
	</Grid>
</UserControl>
