<UserControl 
    x:Class="Lyt.Avalonia.PaletteDesigner.Workflow.Palette.PaletteColorView"
    xmlns:vm="clr-namespace:Lyt.Avalonia.PaletteDesigner.Workflow.Palette"
    x:DataType="vm:PaletteColorViewModel" 

    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    >
    <Grid>		
        <Grid
            IsVisible="{Binding IsFlatLayout}"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Rectangle
                Grid.RowSpan="3"
                Fill="{Binding BaseBrush}"
                />
            <Grid
                Grid.Row="2" Margin="8"
                >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Rectangle
                    Grid.Column="0"
                    Fill="{Binding LighterBrush}"
                    />
                <Rectangle
                    Grid.Column="1"
                    Fill="{Binding LightBrush}"
                    />
                <Rectangle
                    Grid.Column="2"
                    Fill="{Binding DarkBrush}"
                    />
                <Rectangle
                    Grid.Column="3"
                    Fill="{Binding DarkerBrush}"
                    />
            </Grid>
        </Grid>

        <Grid
            IsVisible="{Binding IsPrimaryLayout}"
            >
            <Rectangle
                Fill="{Binding BaseBrush}"
                />
            <Grid
                Margin="16"
                >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
					<RowDefinition Height="16" />
					<RowDefinition Height="*" />
                    <RowDefinition Height="16" />
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
                <Rectangle
                    Grid.Column="2" Grid.Row="0"
                    Fill="{Binding LightBrush}"
                    />
                <Rectangle
                    Grid.Column="4" Grid.Row="0"
                    Fill="{Binding LighterBrush}"
                    />
                <Rectangle
                    Grid.Column="0" Grid.Row="2"
                    Fill="{Binding DarkBrush}"
                    />
                <Rectangle
                    Grid.Column="0" Grid.Row="4"
                    Fill="{Binding DarkerBrush}"
                    />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
