<UserControl
	x:Class="Lyt.Avalonia.PaletteDesigner.Workflow.Imaging.ImagingView"
	xmlns:vm="clr-namespace:Lyt.Avalonia.PaletteDesigner.Workflow.Imaging"
	x:DataType="vm:ImagingViewModel"

	xmlns:shared="clr-namespace:Lyt.Avalonia.PaletteDesigner.Workflow.Shared"

	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	
	Background="Transparent"
	>
	<Grid
		Margin="8"
		ShowGridLines="False"
		>
		<Grid.RowDefinitions>
			<RowDefinition Height="92" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid
			Grid.Row="1"
			ShowGridLines="False"
			>
			<Grid.ColumnDefinitions>
				<!-- Spacer -->
				<ColumnDefinition Width="8" />
				<ColumnDefinition Width="600" />
				<!-- Spacer -->
				<ColumnDefinition Width="20" />
				<ColumnDefinition Width="900" />
				<!-- Spacer -->
				<ColumnDefinition Width="20" />
				<ColumnDefinition Width="Auto" />
				<!-- Spacer -->
				<ColumnDefinition Width="12" />
				<ColumnDefinition Width="Auto" />
				<!-- Spacer -->
				<ColumnDefinition Width="8" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>

			<Grid
				Grid.Column="1"
				ShowGridLines="False"
				>
				<Grid.RowDefinitions>
					<RowDefinition Height="400" />
					<RowDefinition Height="600" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
				<vm:DropView
					Grid.Row="0"
					Margin="0 20 0 12"
					DataContext="{Binding DropViewModel}"
					/>
				<Image
					Grid.Row="1"
					Source="{Binding SourceImage}"
					IsHitTestVisible="False"
					VerticalAlignment="Top"
					/>
			</Grid>
			<ScrollViewer
				Grid.Row="1" Grid.Column="3" Width="900"
				Margin="0"
				Background="Transparent"
				VerticalAlignment="Stretch" HorizontalAlignment="Left"
				ScrollViewer.HorizontalScrollBarVisibility="Disabled"
				ScrollViewer.VerticalScrollBarVisibility="Auto"
				>
				<ItemsControl
					x:Name="SwatchesItemsControl"
					ItemsSource="{Binding SwatchesViewModels}"
					Padding="0"
					HorizontalAlignment="Stretch"
					>
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<WrapPanel Orientation="Horizontal" Margin="0" />
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<vm:ImageSwatchView Margin="12 20 12 0" Width="260"/>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</ScrollViewer>
		</Grid>

		<!-- Top toolbars -->
		<StackPanel
			Grid.Row="0" Grid.ColumnSpan="5"
			HorizontalAlignment="Center"
			Orientation="Horizontal"
			>
			<!--
			<vm:ImagingFiltersToolbarView
				Margin="0 "
				DataContext="{Binding ModelSelectionToolbarViewModel}"
				/>
			-->
			<shared:ExportToolbarView
				Margin="12 0 0 0"
				DataContext="{Binding ExportToolbarViewModel}"
				/>
		</StackPanel>
	</Grid>
</UserControl>
