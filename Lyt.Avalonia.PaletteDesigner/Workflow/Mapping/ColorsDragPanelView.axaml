<UserControl 
	x:Class="Lyt.Avalonia.PaletteDesigner.Workflow.Mapping.ColorsDragPanelView"
	xmlns:vm="clr-namespace:Lyt.Avalonia.PaletteDesigner.Workflow.Mapping"
	x:DataType="vm:ColorsDragPanelViewModel" 

	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	>
	<Grid
		ShowGridLines="False"
		x:Name="MainGrid"
		>
		<Grid.RowDefinitions>
			<RowDefinition Height="36" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TextBlock
			Grid.Row="0"
			Text="{Binding PaletteName}"
			Theme="{StaticResource H2}"			
			VerticalAlignment="Stretch" HorizontalAlignment="Center"
			/>
		<ItemsControl
			x:Name="ColorsItemsControl"
			ItemsSource="{Binding ColorDragViewModels}"
			Grid.Row="1"
			Margin="8" Padding="0"
			HorizontalAlignment="Center"
			>
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel Orientation="Vertical" Margin="0" />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<vm:ColorDragView Margin="12" />
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</Grid>
</UserControl>
