<UserControl 
	x:Class="Lyt.Avalonia.PaletteDesigner.Workflow.Mapping.DraggableColorBoxView"
	xmlns:vm="clr-namespace:Lyt.Avalonia.PaletteDesigner.Workflow.Mapping"
	x:DataType="vm:DraggableColorBoxViewModel" 

	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	>
	<Grid
		Width="72" Height="104"
		>
		<Border
			x:Name="border"
			Background="Transparent"
			BorderBrush="{Binding BorderBrush}"
			Margin="4"
			CornerRadius="4"
			>
			<Rectangle
				x:Name="rectangle"
				Fill="{Binding ShadeBrush}"
				Margin="4"
				RadiusX="4" RadiusY="4"
				/>
		</Border>
	</Grid>
</UserControl>
