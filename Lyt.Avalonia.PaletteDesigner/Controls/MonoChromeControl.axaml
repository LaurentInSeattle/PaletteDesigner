<UserControl 
	x:Class="Lyt.Avalonia.PaletteDesigner.Controls.MonoChromeControl"

	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="80" d:DesignHeight="80"
	Foreground="{StaticResource LightAqua_0_100}"
	>
	<Grid
		Width="80" Height="80"
		>
		<Grid.RowDefinitions>
			<RowDefinition Height="16"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="16"/>
		</Grid.RowDefinitions>
		<Ellipse
			Margin="6"
			Grid.RowSpan="3"
			Fill="Transparent"
			Stroke="{ReflectionBinding $parent[UserControl].Foreground}"
			StrokeThickness="2.0"
			/>
		<Ellipse
			Margin="0"
			Height="14" Width="14"
			Grid.RowSpan="1"
			Fill="{ReflectionBinding $parent[UserControl].Foreground}"
			Stroke="{ReflectionBinding $parent[UserControl].Foreground}"
			StrokeThickness="2.0"
			/>
	</Grid>
</UserControl>
